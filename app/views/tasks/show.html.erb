<h1>Task <%= @task.title %></h1>

<%= link_to 'Edit this Task', edit_task_path %>

<ul>
  <li><%= @task.details %></li>
  <li><% if @task.completed == true %>
        <%= 'This task has been completed' %>
      <% else %>
        <%= 'This task has not been completed' %>
      <% end %>
  </li>
</ul>

<%= link_to 'Back to Task List', tasks_path %>
<%= link_to 'Delete',
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}
%>
